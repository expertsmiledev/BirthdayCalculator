    <script>
      function count() {
        const second = 1000,
          minute = second * 60,
          hour = minute * 60,
          day = hour * 24,
          weeks = day * 7,
          months = day * 30;

        const urlSearchParams = new URLSearchParams(window.location.search);
        const params = Object.fromEntries(urlSearchParams.entries());
        let date = params.date;
        let month = params.month;
        let today = new Date(),
          dd = String(today.getDate()).padStart(2, "0"),
          mm = String(today.getMonth() + 1).padStart(2, "0"),
          yyyy = today.getFullYear(),
          nextYear = yyyy + 1,
          dayMonth = `${month}/${date}/`,
          birthday = dayMonth + yyyy;
        today = mm + "/" + dd + "/" + yyyy;
        if (today > birthday) {
          birthday = dayMonth + nextYear;
          let word =
            params.lang === "sp"
              ? "Â¿CuÃ¡ntos dÃ­as mÃ¡s hasta mi cumpleaÃ±os"
              : params.lang === "ch"
              ? "ç¦»æˆ‘ç”Ÿæ—¥è¿˜æœ‰å¤šå°‘å¤©"
              : "How Many More Days Until My Birthday";
          document.getElementById(
            "howmanydays"
          ).innerText = `${word} ${nextYear}?`;
        } else {
          document.getElementById(
            "howmanydays"
          ).innerText = `How Many More Days Until My Birthday ${yyyy}?`;
        }

        const startDate = today;
        const endDate = birthday;

        const diffInMs = new Date(endDate) - new Date(startDate);
        const diffInDays = diffInMs / (1000 * 60 * 60 * 24);
        days(diffInDays);
        const options = {
          weekday: "long",
          year: "numeric",
          month: "long",
          day: "numeric",
        };
        let loc =
          params.lang === "sp"
            ? "es-ES"
            : params.lang === "ch"
            ? "zh-CN"
            : "en-US";
        document.getElementById("todayDate").innerHTML = `on ${new Date(
          birthday
        ).toLocaleDateString(loc, options)}`;
        //end

        const countDown = new Date(birthday).getTime(),
          x = setInterval(function () {
            const now = new Date().getTime(),
              distance = countDown - now;

            let d1 = new Date(birthday);
            let d2 = (nows = new Date());
            if (d2.getTime() < d1.getTime()) {
              d1 = nows;
              d2 = new Date(birthday);
            }
            let md = d1.getMonth();
            let mn = d2.getMonth();
            let mo = mn - md;
            if (mo < 0) {
              mo = 12 - md + mn;
            }
            let dd = d1.getDate();
            let dn = d2.getDate();
            let days = dn - dd;
            if (days < 0) {
              mo--;
              // figure out how many days there are in the last month
              d2.setMonth(mn, 0);
              days = d2.getDate() - dd + dn;
            }

            (document.getElementById("months").innerText = Math.floor(mo)),
              (document.getElementById("days").innerText = Math.floor(days)),
              (document.getElementById("hours").innerText = Math.floor(
                (distance % day) / hour
              )),
              (document.getElementById("minutes").innerText = Math.floor(
                (distance % hour) / minute
              )),
              (document.getElementById("seconds").innerText = Math.floor(
                (distance % minute) / second
              ));

            //do something later when date is reached
            if (distance < 0) {
              document.getElementById("headline").innerText =
                "It's my birthday!";
              document.getElementById("countdown").style.display = "none";
              document.getElementById("content").style.display = "block";
              clearInterval(x);
            }
            //seconds
          }, 0);
      }
